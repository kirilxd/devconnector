{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "no-undef": 1,
        "no-unused-vars": 1,
        "react/no-deprecated": 1,
        "react/prop-types": 1,
        "react/display-name": 1,
        "react/no-string-refs": 1,
        "react/jsx-no-target-blank": 1,
        "react/no-unescaped-entities": 1
    }
}
